    </None>
    <None Update="Config\cobolfunctions.conf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Config\cppfunctions.conf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
