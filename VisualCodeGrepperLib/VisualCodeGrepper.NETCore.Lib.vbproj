    <None Remove="Forms\**" />
    <None Remove="Models\**" />
    <None Remove="Modules\**" />
    <None Remove="My Project\**" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Program.vb" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="Models\AppSettings.vb" />
